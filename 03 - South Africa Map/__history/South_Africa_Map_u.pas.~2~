{$R *.dfm}

//Eastern Cape
procedure TfrmMap.imgPIEasternCapeClick(Sender: TObject);
begin
  //Code When Picture is Clicked
end;

procedure TfrmMap.imgPIEasternCapeMouseEnter(Sender: TObject);
begin
  imgProvinceIndex.Picture.LoadFromFile('Provinces\Eastern Cape.png')
end;

procedure TfrmMap.imgPIEasternCapeMouseLeave(Sender: TObject);
begin
  imgProvinceIndex.Picture.LoadFromFile('Provinces\Blank.png')
end;

